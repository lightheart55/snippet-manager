            tabPreview.classList.remove('border-blue-500', 'text-white');
            tabPreview.classList.add('text-gray-400');
        });

        // Hàm tiện ích để sao chép văn bản
        function copyTextToClipboard(text, successElement) {
            if (!text) return;
            
            const textarea = document.createElement('textarea');
            textarea.value = text;
            document.body.appendChild(textarea);
            textarea.select();
            try {
                document.execCommand('copy');
                // Hiển thị thông báo thành công
                if (successElement) {
                    successElement.style.display = 'block';
                    successElement.style.opacity = 1;
                    setTimeout(() => {
                        successElement.style.opacity = 0;
                        setTimeout(() => { successElement.style.display = 'none'; }, 500);
                    }, 1500);
                }
            } catch (err) {
                console.error('Không thể sao chép:', err);
            }
            document.body.removeChild(textarea);
        }

        // Xử lý sao chép biên bản đã biên tập (Copy Button chính)
        copyButton.addEventListener('click', () => {
            copySuccessMain.style.position = 'absolute';
            copySuccessMain.style.top = '50%';
            copySuccessMain.style.left = '50%';
            copySuccessMain.style.transform = 'translate(-50%, -50%)';
            copyTextToClipboard(formattedText, copySuccessMain);
        });

        // Xử lý sự kiện nhấp nút "Biên tập"
        formatButton.addEventListener('click', async () => {
            const userQuery = rawInput.value;
            if (!userQuery.trim()) {
                previewOutput.innerHTML = '<p class="text-yellow-400">Vui lòng nhập nội dung thô trước khi biên tập.</p>';
                advancedFeaturesContainer.style.display = 'none';
                return;
            }

            loadingOverlay.style.display = 'flex'; // Hiện loading
            formatButton.disabled = true;
            advancedFeaturesContainer.style.display = 'none'; // Ẩn nút trong khi loading

            try {
                // Bước 1: Biên tập
                const result = await callGeminiAPI(systemPrompt, userQuery);
                formattedText = result; 

                previewOutput.innerHTML = marked.parse(result); 
                markdownOutput.textContent = result; 
                
                tabPreview.click();
                
                // HIỆN KHỐI NÚT CHỨC NĂNG NÂNG CAO
                advancedFeaturesContainer.style.display = 'grid'; 
                
            } catch (error) {
                console.error('Lỗi khi gọi API Biên tập:', error);
                previewOutput.innerHTML = `<p class="text-red-400">Đã xảy ra lỗi khi biên tập. Vui lòng thử lại. Lỗi: ${error.message}</p>`;
                advancedFeaturesContainer.style.display = 'none';

            } finally {
                loadingOverlay.style.display = 'none'; 
                formatButton.disabled = false;
            }
        });

        // Hàm render danh sách đầu việc ra HTML
        function renderTasks(tasks) {
            if (!tasks || tasks.length === 0) {
                return '<p class="text-gray-700">Không tìm thấy đầu việc nào có tính chất hành động rõ ràng trong biên bản.</p>';
            }

            let html = `
                <div class="space-y-4">
                    <div class="grid grid-cols-12 font-bold text-gray-700 border-b pb-3 text-sm md:text-base">
                        <div class="col-span-6 pl-2">Đầu việc</div>
                        <div class="col-span-3">Người phụ trách</div>
                        <div class="col-span-3">Thời hạn</div>
                    </div>
            `;

            tasks.forEach((task, index) => {
                const taskText = task.task || 'Không có mô tả';
                const assigneeText = task.assignee || 'Chưa xác định';
                const deadlineText = task.deadline || 'Chưa xác định';

                html += `
                    <div class="grid grid-cols-12 py-3 border-b border-gray-100 hover:bg-gray-50 transition duration-150 rounded-lg">
                        <div class="col-span-6 text-sm text-gray-800 font-medium pl-2">${index + 1}. ${taskText}</div>
                        <div class="col-span-3 text-xs text-gray-600">${assigneeText}</div>
                        <div class="col-span-3 text-xs text-gray-600">${deadlineText}</div>
                    </div>
                `;
            });

            html += '</div>';
            return html;
        }

        // Tái sử dụng modal cho Trích xuất Đầu việc và Đánh giá Ngữ điệu
        function showGenericModal(title, contentHTML, iconClass, copyText = null) {
            taskModal.style.display = 'flex';
            modalTitle.textContent = title; 
            taskListContainer.innerHTML = contentHTML;
            
            modalIcon.setAttribute('class', iconClass);

            currentModalRawContent = copyText; // Lưu nội dung thô để copy
            copyTasksButton.disabled = !copyText;
            copyTasksButton.style.display = copyText ? 'flex' : 'none';
        }

        // Xử lý sự kiện nhấp nút "Trích xuất Đầu việc"
        extractTasksButton.addEventListener('click', async () => {
            if (!formattedText.trim()) {
                alert("Vui lòng biên tập nội dung trước khi trích xuất.");
                return;
            }

            showGenericModal("Kết quả Trích xuất Đầu việc",
                `<div class="flex flex-col items-center justify-center min-h-[300px]">
                    <div class="loader" style="border-bottom-color: #F97316;"></div>
                    <p class="text-gray-700 text-lg font-semibold mt-4">Đang trích xuất đầu việc...</p>
                    <p class="text-sm text-gray-500 mt-2">Quá trình này có thể mất vài giây.</p>
                </div>`,
                "h-8 w-8 text-orange-600");
            
            taskModal.querySelector('#copy-tasks-button > span').textContent = "Sao chép Đầu việc";


            try {
                const jsonResult = await callGeminiAPI(taskExtractionSystemPrompt, formattedText, taskSchema);
                extractedTasks = jsonResult; 

                const taskHtml = renderTasks(extractedTasks);
                
                // Chuẩn bị văn bản sao chép (format lại cho tiện dán)
                let copyText = "";
                extractedTasks.forEach((task, index) => {
                    copyText += `${index + 1}. Công việc: ${task.task || 'Không có mô tả'}\n`;
                    copyText += `   - Người phụ trách: ${task.assignee || 'Chưa xác định'}\n`;
                    copyText += `   - Thời hạn: ${task.deadline || 'Chưa xác định'}\n`;
                    copyText += (index < extractedTasks.length - 1) ? "\n" : "";
                });
                
                showGenericModal("Kết quả Trích xuất Đầu việc", taskHtml, "h-8 w-8 text-orange-600", copyText);

            } catch (error) {
                console.error('Lỗi khi gọi API Trích xuất Đầu việc:', error);
                showGenericModal("Kết quả Trích xuất Đầu việc", `
                    <p class="text-red-500 font-semibold">Đã xảy ra lỗi khi trích xuất:</p>
                    <p class="text-sm text-gray-700 mt-2">Không thể kết nối đến dịch vụ AI hoặc dữ liệu không hợp lệ. Vui lòng thử lại sau.</p>
                    <p class="text-xs text-gray-400 mt-1">${error.message}</p>
                `, "h-8 w-8 text-orange-600", null);
            }
        });

        // Xử lý sự kiện nhấp nút "Đánh giá Ngữ điệu"
        toneAnalysisButton.addEventListener('click', async () => {
            const rawTopic = rawInput.value.trim();
            if (!rawTopic) {
                alert('Vui lòng nhập nội dung thô trước khi đánh giá ngữ điệu.');
                return;
            }

            showGenericModal("✨ Đánh giá Ngữ điệu", 
                `<div class="flex flex-col items-center justify-center min-h-[300px]">
                    <div class="loader" style="border-bottom-color: #4F46E5;"></div>
                    <p class="text-gray-700 text-lg font-semibold mt-4">Đang phân tích ngữ điệu...</p>
                    <p class="text-sm text-gray-500 mt-2">Nội dung thô: ${rawTopic.substring(0, 50)}...</p>
                </div>`, 
                "h-8 w-8 text-indigo-600");
                
            taskModal.querySelector('#copy-tasks-button > span').textContent = "Sao chép Đánh giá";

            try {
                const result = await callGeminiAPI(toneAnalysisSystemPrompt, rawTopic);
                const resultHtml = marked.parse(result);
                
                // Hiển thị kết quả bằng Markdown
                showGenericModal("✨ Đánh giá Ngữ điệu", `<div class="prose max-w-none">${resultHtml}</div>`, "h-8 w-8 text-indigo-600", result);
                
            } catch (error) {
                console.error('Lỗi khi gọi API Đánh giá Ngữ điệu:', error);
                showGenericModal("✨ Đánh giá Ngữ điệu", `
                    <p class="text-red-500 font-semibold">Đã xảy ra lỗi khi phân tích:</p>
                    <p class="text-sm text-gray-700 mt-2">Không thể kết nối đến dịch vụ AI. Vui lòng thử lại sau.</p>
                    <p class="text-xs text-gray-400 mt-1">${error.message}</p>
                `, "h-8 w-8 text-indigo-600", null);
            }
        });

        // Xử lý đóng modal Trích xuất Đầu việc/Ngữ điệu
        closeModal.addEventListener('click', () => {
            taskModal.style.display = 'none';
        });

        // Xử lý nút Sao chép trong modal Trích xuất/Ngữ điệu (dùng currentModalRawContent)
        copyTasksButton.addEventListener('click', () => {
             // Sử dụng copySuccessTasks nằm trong modal footer
            copyTextToClipboard(currentModalRawContent, copySuccessTasks);
        });
        
        // --- Logic cho Modal Rút gọn Từ khóa (Discussion Modal) ---

        // Xử lý sự kiện nhấp nút "Gợi ý Thảo luận" (MỞ MODAL)
        suggestDiscussionButton.addEventListener('click', () => {
            discussionModal.style.display = 'flex';
            // Reset output area khi mở modal
            discussionSuggestionsOutput.innerHTML = '<p class="text-gray-500 italic">Từ khóa gợi ý sẽ xuất hiện tại đây. Định dạng: [TÊN VẤN ĐỀ] → [TỪ KHÓA GỢI Ý].</p>';
            discussionTopicInput.value = formattedText.trim() || ''; // Tự động điền biên bản đã biên tập vào
            generateDiscussionButton.disabled = false;
            copyKeywordsButton.disabled = true;
        });

        // Xử lý đóng modal Rút gọn Từ khóa
        closeDiscussionModal.addEventListener('click', () => {
            discussionModal.style.display = 'none';
        });

        // Xử lý sự kiện nhấp nút "Tạo Gợi ý Thảo luận" (Bên trong modal)
        generateDiscussionButton.addEventListener('click', async () => {
            const topic = discussionTopicInput.value.trim();
            if (!topic) {
                discussionSuggestionsOutput.innerHTML = '<p class="text-red-500 font-semibold">Vui lòng nhập nội dung/chủ đề để rút gọn từ khóa.</p>';
                return;
            }

            // Hiển thị loading
            discussionSuggestionsOutput.innerHTML = `
                <div class="flex flex-col items-center justify-center min-h-[200px]">
                    <div class="loader bg-green-600" style="border-bottom-color: #10B981;"></div>
                    <p class="text-gray-700 text-lg font-semibold mt-4">Đang phân tích và rút gọn từ khóa...</p>
                    <p class="text-sm text-gray-500 mt-2">Nội dung: ${topic.substring(0, 50)}...</p>
                </div>
            `;
            generateDiscussionButton.disabled = true;
            copyKeywordsButton.disabled = true;

            try {
                // Gọi API với chủ đề người dùng nhập và system prompt mới
                const result = await callGeminiAPI(discussionSystemPrompt, topic);
                currentModalRawContent = result; // LƯU KẾT QUẢ THÔ ĐỂ COPY
                
                // Render kết quả ra modal - sử dụng marked.parse để xử lý markdown header nếu có
                discussionSuggestionsOutput.innerHTML = marked.parse(result);
                copyKeywordsButton.disabled = false; // Bật nút sao chép

            } catch (error) {
                console.error('Lỗi khi gọi API Gợi ý Thảo luận:', error);
                discussionSuggestionsOutput.innerHTML = `
                    <p class="text-red-500 font-semibold">Đã xảy ra lỗi khi rút gọn từ khóa:</p>
                    <p class="text-sm text-gray-700 mt-2">Không thể kết nối đến dịch vụ AI. Vui lòng thử lại sau.</p>
                    <p class="text-xs text-gray-400 mt-1">${error.message}</p>
                `;
            } finally {
                generateDiscussionButton.disabled = false;
            }
        });

        // Xử lý sao chép Gợi ý Từ khóa
        copyKeywordsButton.addEventListener('click', () => {
            if (!currentModalRawContent.trim()) return;

            // Loại bỏ các tiêu đề Markdown (dòng bắt đầu bằng # hoặc ##) trước khi sao chép
            const cleanText = currentModalRawContent.split('\n')
                                                    .filter(line => !line.trim().startsWith('#') && line.trim() !== '')
                                                    .join('\n')
                                                    .trim();

            copyTextToClipboard(cleanText, copySuccessKeywords);
        });
        
        // --- Logic cho Modal Tóm tắt Điều chỉnh (Revision Modal) ---

        // Xử lý sự kiện nhấp nút "Tóm tắt Điều chỉnh" (MỞ MODAL)
        revisionSummaryButton.addEventListener('click', () => {
            revisionModal.style.display = 'flex';
            revisionSummaryOutput.innerHTML = '<p class="text-gray-500 italic">Kết quả tóm tắt sự khác biệt giữa hai phiên bản sẽ hiển thị ở đây.</p>';
            copyRevisionButton.disabled = true;
            // Tự động điền biên bản đã biên tập vào ô "Biên bản Đã Chỉnh sửa"
            revisedDocInput.value = formattedText.trim() || ''; 
        });

        // Xử lý đóng modal Tóm tắt Điều chỉnh
        closeRevisionModalBtn.addEventListener('click', () => {
            revisionModal.style.display = 'none';
        });
        closeRevisionModal.addEventListener('click', () => {
            revisionModal.style.display = 'none';
        });

        // Xử lý nút "Tạo Tóm tắt Điều chỉnh"
        generateRevisionButton.addEventListener('click', async () => {
            const originalDoc = originalDocInput.value.trim();
            const revisedDoc = revisedDocInput.value.trim();

            if (!originalDoc || !revisedDoc) {
                revisionSummaryOutput.innerHTML = '<p class="text-red-500 font-semibold">Vui lòng nhập cả Biên bản Gốc và Biên bản Đã Chỉnh sửa để so sánh.</p>';
                return;
            }

            // Hiển thị loading
            revisionSummaryOutput.innerHTML = `
                <div class="flex flex-col items-center justify-center min-h-[200px]">
                    <div class="loader" style="border-bottom-color: #DC2626;"></div>
                    <p class="text-gray-700 text-lg font-semibold mt-4">Đang phân tích và tạo báo cáo điều chỉnh...</p>
                    <p class="text-sm text-gray-500 mt-2">So sánh phiên bản Gốc (${originalDoc.length} ký tự) và phiên bản Mới (${revisedDoc.length} ký tự).</p>
                </div>
            `;
            generateRevisionButton.disabled = true;
            copyRevisionButton.disabled = true;

            try {
                // Tạo query bằng cách thay thế placeholder trong system prompt
                const fullQuery = revisionSummarySystemPrompt
                    .replace('[ORIGINAL_DOCUMENT]', originalDoc)
                    .replace('[REVISED_DOCUMENT]', revisedDoc);

                // Gọi API
                const result = await callGeminiAPI(fullQuery, "Tóm tắt sự khác biệt theo yêu cầu định dạng trên.");
                currentModalRawContent = result; // LƯU KẾT QUẢ THÔ ĐỂ COPY
                
                // Render kết quả
                revisionSummaryOutput.innerHTML = marked.parse(result);
                copyRevisionButton.disabled = false; 

            } catch (error) {
                console.error('Lỗi khi gọi API Tóm tắt Điều chỉnh:', error);
                revisionSummaryOutput.innerHTML = `
                    <p class="text-red-500 font-semibold">Đã xảy ra lỗi khi tạo tóm tắt điều chỉnh:</p>
                    <p class="text-sm text-gray-700 mt-2">Không thể kết nối đến dịch vụ AI. Vui lòng thử lại sau.</p>
                    <p class="text-xs text-gray-400 mt-1">${error.message}</p>
                `;
            } finally {
                generateRevisionButton.disabled = false;
            }
        });

        // Xử lý sao chép Tóm tắt Điều chỉnh
        copyRevisionButton.addEventListener('click', () => {
            if (!currentModalRawContent.trim()) return;

            copyTextToClipboard(currentModalRawContent, copySuccessRevision);
        });

        // Hàm gọi Gemini API (hỗ trợ cả text và JSON schema) với xử lý retry
        async function callGeminiAPI(systemPrompt, userQuery, responseSchema = null, retries = 3, delay = 1000) {
            const apiKey = ""; // Canvas sẽ tự động thêm key
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;
            
            const payload = {
                contents: [{
                    parts: [{ text: userQuery }]
                }],
                systemInstruction: {
                    parts: [{ text: systemPrompt }]
                },
            };

            if (responseSchema) {
                payload.generationConfig = {
                    responseMimeType: "application/json",
                    responseSchema: responseSchema
                };
            }

            for (let i = 0; i < retries; i++) {
                try {
                    const response = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    if (!response.ok) {
                        const errorBody = await response.text();
                        console.error("API Error Body:", errorBody);
                        throw new Error(`HTTP error! status: ${response.status} - ${response.statusText}`);
                    }

                    const result = await response.json();
                    const partText = result.candidates?.[0]?.content?.parts?.[0]?.text;
                    
                    if (partText) {
                        if (responseSchema) {
                            try {
                                return JSON.parse(partText);
                            } catch (e) {
                                console.error("Lỗi Parsing JSON:", partText);
                                throw new Error('Phản hồi không phải là JSON hợp lệ.');
                            }
                        } else {
                            return partText;
                        }
                    } else {
                        throw new Error('Định dạng phản hồi API không hợp lệ hoặc nội dung trống.');
                    }

                } catch (error) {
                    if (i === retries - 1) { 
                        throw error; 
                    }
                    await new Promise(resolve => setTimeout(resolve, delay)); 
                    delay *= 2; 
                }
            }
        }
    </script>
</body>
</html>
